<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
    <h1>ポエム一覧</h1>



      <% @poems.each do |poem| %>
          <div class="row">
            <p><strong><%= poem.title %></strong></p>
            <p><%= poem.content %></p>
            <%= link_to "詳細", poem_path(poem.id), class: 'btn btn-default btn-sm btn-success' %>

          </div>
      <% end %>

  </div>
</div>

